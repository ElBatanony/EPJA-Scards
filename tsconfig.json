{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ESNext"
        ],
        "baseUrl": "./",
        "paths": {
            "@main/*": [
                "src/*"
            ]
        },
        "outDir": "./dist/",
        "jsx": "react",
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [],
        "skipLibCheck": true, /* Skip type checking of declaration files. */
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx",
        "node_modules/@types/jest"
    ]
}